{
  "$id": "trqp-authorization-response",
  "title": "AuthorizationResponse",
  "type": "object",
  "required": ["entity_id", "authority_id", "action", "resource", "authorized", "time_evaluated"],
  "properties": {
    "entity_id": {
      "type": "string",
      "description": "The identifier for the entity tested"
    },
    "authority_id": {
      "type": "string",
      "description": "The identifier for the authority queried"
    },
    "action": {
      "type": "string",
      "description": "The action checked"
    },
    "resource": {
      "type": "string",
      "description": "The resource checked"
    },
    "authorized": {
      "type": "boolean",
      "description": "True if authorized, false otherwise"
    },
    "time_requested": {
      "type": "string",
      "format": "date-time",
      "description": "The time requested (from context)"
    },
    "time_evaluated": {
      "type": "string",
      "format": "date-time",
      "description": "The server time used in evaluation"
    },
    "message": {
      "type": "string",
      "description": "Additional details about the response"
    },
    "context": {
      "type": "object",
      "description": "The context object from the request"
    }
  },
  "additionalProperties": false
}
