# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# Database Configuration
# For local development (non-Docker): use localhost:5435
# For Docker Compose: use postgres:5432 (will be overridden by docker-compose.yml)
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/toip_registry_dev?schema=public"

# Docker Compose Variables
DB_NAME=toip_registry_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5435

# Redis Configuration
# For local development (non-Docker): use localhost:6381
# For Docker Compose: use redis:6379 (will be overridden by docker-compose.yml)
REDIS_URL="redis://:redis@redis:6379"
REDIS_PASSWORD=redis
REDIS_PORT=6381

# Registry Configuration
REGISTRY_DID=did:web:localhost:3002
REGISTRY_NAME="ToIP Trust Registry Dev"

# API Configuration
API_VERSION=v2
API_BASE_PATH=/v2

# Security
API_KEY_SALT_ROUNDS=12
JWT_SECRET=your-secret-key-here-minimum-32-characters-long-for-security

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Registry Keys (will be auto-generated if not provided)
# REGISTRY_PRIVATE_KEY=
# REGISTRY_PUBLIC_KEY=
